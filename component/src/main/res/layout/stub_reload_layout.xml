<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:com.hisunfly.one.mvpdeome.app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reload_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@color/bg_color_normal1"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/imgv_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/common_ic_load_failure"
        com.hisunfly.one.mvpdeome.app:layout_constraintBottom_toTopOf="@+id/tv_reload"
        com.hisunfly.one.mvpdeome.app:layout_constraintLeft_toLeftOf="parent"
        com.hisunfly.one.mvpdeome.app:layout_constraintRight_toRightOf="parent" />

    <com.hisunflytone.component.uikit.widgets.HtmlTextView
        android:id="@+id/tv_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/common_load_fail_tips"
        android:textColor="@color/font_color_secondary1"
        android:textSize="@dimen/frame_font_28"
        com.hisunfly.one.mvpdeome.app:layout_constraintBottom_toBottomOf="parent"
        com.hisunfly.one.mvpdeome.app:layout_constraintLeft_toLeftOf="parent"
        com.hisunfly.one.mvpdeome.app:layout_constraintRight_toRightOf="parent"
        com.hisunfly.one.mvpdeome.app:layout_constraintTop_toTopOf="parent"
        com.hisunfly.one.mvpdeome.app:layout_constraintVertical_bias="0.46" />

    <TextView
        android:id="@+id/tv_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/common_selector_btn_corner_18"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingTop="7dp"
        android:paddingRight="30dp"
        android:paddingBottom="7dp"
        android:text="@string/common_retry"
        android:textColor="@color/font_color_normal2"
        android:textSize="@dimen/frame_font_30"
        com.hisunfly.one.mvpdeome.app:layout_constraintLeft_toLeftOf="parent"
        com.hisunfly.one.mvpdeome.app:layout_constraintRight_toRightOf="parent"
        com.hisunfly.one.mvpdeome.app:layout_constraintTop_toBottomOf="@+id/tv_reload" />
</android.support.constraint.ConstraintLayout>